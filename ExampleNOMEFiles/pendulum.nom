bank b
	set zrot 0 -20 20 1 time
	set yrot 0 0 20 1 time
	set speed 0 0 20 2 time
endbank 


tunnel tun (12 10 0 2) endtunnel
torus tor (12 4 4  360 360 12) endtorus

group gr
    instance i1 tun endinstance
    instance i2 tor translate (0 ({expr $b.yrot} - 1) ({expr $b.zrot})) endinstance
endgroup

instance final gr endinstance
